@model ServiceModel

@{
    //page title
    ViewBag.Title = T("Admin.Catalog.Service.Services.EditServiceDetails").Text;
    //active menu item (system name)
    Html.SetActiveMenuItemSystemName("Service");
}


<form asp-controller="Service" asp-action="ServiceEdit" method="post">
    <div class="content-header clearfix">
        <h1 class="pull-left">
            @T("Admin.Catalog.Services.EditServiceDetails") - @Model.Name
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="List">@T("Admin.Catalog.Services.BackToList")</a>
            </small>
        </h1>
        <div class="pull-right">            
            <button type="button" onclick="javascript:OpenWindow('@Url.RouteUrl("Service", new {SeName = Model.SeName})', 800, 600, true); return false;" class="btn bg-purple">
                <i class="fa fa-eye"></i>
                @T("Admin.Common.Preview")
            </button>
            <button type="submit" name="save" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn bg-blue">
                <i class="fa fa-floppy-o"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            <span id="Service-delete" class="btn bg-red">
                <i class="fa fa-trash-o"></i>
                @T("Admin.Common.Delete")
            </span>
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdate", Model)
</form>
<nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="Service-delete" />