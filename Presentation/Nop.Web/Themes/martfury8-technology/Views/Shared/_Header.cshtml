<header>
    <div class="topbar" id="topbar">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-5 topbar-sidebar d-none d-md-block"></div>
                <div class="col-md-7 topbar-sidebar">
                    <div class="row align-items-center justify-content-end top-link-wrap">
                        <div class="col-auto">
                            @await Component.InvokeAsync("LanguageSelector")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="header-main-content sticky-menu">
        <div class="container">
            <div class="header-main-inner">
                <div class="row align-items-center header-maininner-row">
                    <div class="col-12 col-md-3 col-lg-3 col-logo">
                        <div class="menu-logo">
                            <h1 class="logo text-hide">
                                @await Component.InvokeAsync("Logo")
                            </h1>
                        </div>
                    </div>
                    <div class="col-md-5 col-lg-5 col-xl-6 col-search">
                        <div class="search-box">
                            @await Component.InvokeAsync("SearchBox")
                        </div>
                    </div>
                    <div class="col-12 col-md-4 col-lg-4 col-xl-3">
                        <div class="header-content-action row no-gutters">
                            <div class="btn-nav-mobile d-md-none col">
                                <button class="btn-nav mb-toggle-switch mb-toggle-switch__htx"><span>toggle menu</span></button>
                            </div>
                            <div class="d-block d-md-none btn-search-mobile col"><i class="mbi mbi-magnifier"></i></div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="header-menu-content d-none d-md-block mainbgcolor">
        <div class="container">
            <div class="menu-container">
                <div class="row align-items-center">
                    <div class="col-12 d-none d-md-block">
                        <div class="horizontal-menu-wrap">
                            <div class="horizontal-menu">
                                @await Component.InvokeAsync("TopMenu")
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-3 d-none d-lg-block"></div>
                </div>
            </div>
        </div>
    </div>
</header>
<div class="skip"></div>