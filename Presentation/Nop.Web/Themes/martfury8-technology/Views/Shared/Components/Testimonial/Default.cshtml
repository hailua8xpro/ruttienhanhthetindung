@model IList<TestimonialModel>
@inject IThemeContext themeContext

@{
    var themeName = themeContext.WorkingThemeName;
    Html.AppendScriptParts(ResourceLocation.Footer, "~/lib/jquery-parallax/parallax.min.js");
    var bgimage = string.Format("/Themes/{0}/Content/images/testimonial-bg.jpg", themeName);
}
<div class="parallax-window">
    <div class="block-testimonial">
        <div class="container">
            <div class="main-heading">
                <h2 class="heading-title">
                    <span>@T("Homepage.Testimonials")</span>
                </h2>
            </div>
            <div class="row">
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <div class="col-12 col-sm-6">
                            <div class="testimonial">
                                <img class="lazy" data-src="@item.ImageUrl" alt="@item.FullName" />
                                <div class="name">
                                    <strong>@item.FullName</strong>
                                    @if (!string.IsNullOrEmpty(item.Description))
                                    {
                                        <text>/ </text> @item.Description
                                    }

                                </div>
                                <div class="text">
                                    @Html.Raw(item.FullDescription)
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>
<script asp-location="Footer">
    $(document).ready(function () {
        $('.parallax-window').parallax({ imageSrc: '@bgimage' });
    });
</script>