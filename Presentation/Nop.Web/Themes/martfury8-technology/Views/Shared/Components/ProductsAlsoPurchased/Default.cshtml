@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{
    <div class="block-related-product">
        <h2 class="heading-title">@T("Products.AlsoPurchased")</h2>
        <div class="block-product">
            <div class="widget-product">
                <div class="swiper-container alsopurchased-slider">
                    <div class="swiper-wrapper">
                        @foreach (var item in Model)
                        {
                            <div class="swiper-slide">
                                @await Html.PartialAsync("_ProductBox", item)
                            </div>
                        }
                    </div>
                    <div class="swiper-button-prev">
                        <i class="mbi mbi-chevron-left"></i>
                    </div>
                    <div class="swiper-button-next">
                        <i class="mbi mbi-chevron-right"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script asp-location="Footer">
        $(document).ready(function () {
            var relatedproductslider = new Swiper('.alsopurchased-slider', {
                speed: 400,
                slidesPerView: 4,
                spaceBetween: 40,
                // Responsive breakpoints
                breakpoints: {
                    // when window width is <= 320px
                    320: {
                        slidesPerView: 1,
                        spaceBetween: 10
                    },
                    // when window width is <= 480px
                    480: {
                        slidesPerView: 2,
                        spaceBetween: 20
                    },
                    // when window width is <= 640px
                    640: {
                        slidesPerView: 3,
                        spaceBetween: 30
                    }
                },
                watchOverflow: true
            });
        });
    </script>
}
