@inject IThemeContext themeContext
@model IList<ProductOverviewModel>
@{
    Layout = "_ColumnsTwo";
    var themeName = themeContext.WorkingThemeName;

    //title
    Html.AddTitleParts(T("PageTitle.NewProducts").Text);
    //page class
    Html.AppendPageCssClassParts("html-recently-added-products-page");
    Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/productitem.css");
    Html.AppendCssFileParts($"~/Themes/{themeName}/Content/css/category.css");
}
<div class="page recently-added-products-page">
    <div class="page-title">
        <h1>@T("Products.NewProducts")</h1>
    </div>
    <div class="page-body">
        @if (Model.Count > 0)
        {
            <div class="product-grid">
                <div class="item-grid">
                    @foreach (var product in Model)
                    {
                        <div class="item-box">
                            @await Html.PartialAsync("_ProductBox", product)
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>
